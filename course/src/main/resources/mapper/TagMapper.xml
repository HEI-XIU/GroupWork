<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TagMapper">
    <select id="queryTagList" resultType="com.example.entity.Tag">
        select * from tag;
    </select>
    <select id="SearchTag" resultType="com.example.entity.Tag">
        select * from tag  where  tagName like #{tagName};
    </select>
    <insert id ="InsertTag" parameterType="com.example.entity.Tag">
        insert into tag( tagName, tagGroupName) values(#{tagName},#{tagGroupName})
    </insert>
    <update id="UpdateTag" parameterType="com.example.entity.Tag">
        update tag set  tagName = #{tagName} where tagId = #{tagId}
    </update>
    <update id="LinkTagGroup" parameterType="com.example.entity.Tag">
        update tag set tagGroupName = #{tagGroupName} where tagId = #{tagId}
    </update>
    <delete id="deleteTag" parameterType="java.lang.String">
        DELETE FROM tag WHERE tagId = #{tagId};
    </delete>
</mapper>